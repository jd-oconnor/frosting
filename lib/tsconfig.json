{
  "compilerOptions": {
    "target": "ESNext",
    "incremental": true,
    "module": "ESNext",
    "types": ["node", "@types/jest", "jest", "@testing-library/jest-dom"],
    "lib": ["ESNext", "DOM", "DOM.Iterable"],
    "jsx": "react-jsx",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "./dist",
    "strict": true,
    "alwaysStrict": true,
    "emitDeclarationOnly": true,
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "noImplicitAny": false,
    "noEmitHelpers": true,
    "importHelpers": true,
    "baseUrl": ".",
    "paths": {
      "@atoms": ["./src/components/atoms"],
      "@types": ["./src/types"],
      "@variables": ["./src/variables"]
    }
  },
  "include": ["./src", "./variables"],
  "exclude": [
    "node_modules",
    "**/node_modules",
    "dist",
    "dist/**",
    "./rollup.config.mjs",
    "**/**/*.stories.tsx",
    "tests/setupTests.ts"
  ]
}
